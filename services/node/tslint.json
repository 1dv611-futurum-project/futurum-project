{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single"],
		"indent": [true, "tabs"],
		"ter-indent": [true, "tab", {
			"SwitchCase": 1
		}],
        "object-literal-sort-keys": false,
        "trailing-comma": false,
        "ordered-imports": false,
        "no-console": false,
        "member-ordering": false,
        "max-classes-per-file": false
    },
    "rulesDirectory": []
}
